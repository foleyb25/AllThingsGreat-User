<div id="app" v-cloak style="padding: 24px">
    <div class="container-fluid">
        <div v-for="writer in writers" class="bio-container d-block">
            <div class="d-flex flex-row flex-wrap justify-content-center">
                <div class="pic-media-link-combo d-flex flex-column align-items-center">
                    <div class="namebox h-25 w-100 d-flex text-center align-items-center justify-content-center">
                        {{writer.nickName}}
                    </div>
                    <div class="profile-image h-50 w-100 d-flex justify-content-center align-items-center">
                        <img class="center-cropped" :src="!writer.profileImageUrl ? '/images/startup.png' : writer.profileImageUrl">
                    </div>
                    <div class="h-25 w-100 d-flex flex-row align-items-center justify-content-center">
                        <a v-if="writer.twitterLink != 'undefined'" :href="'https://twitter.com/' +writer.twitterLink"
                            class="twitter-icon" target="_blank"><img src="/images/twitter_icon.png" class="social-icon" alt=""></a>
                        <a v-if="writer.instagramLink != 'undefined'" :href="'https://instagram.com/' +writer.instagramLink" target="_blank"><img src="/images/ig_icon.png" class="social-icon" alt=""></a>
                        <a v-if="writer.snapchatLink != 'undefined'" :href="'https://snapchat.com/add/' +writer.snapchatLink" target="_blank"><img src="/images/snapchat_icon.png" class="social-icon" alt=""></a>
                        <a v-if="writer.tiktokLink != 'undefined'" :href="'https://tiktok.com/@' +writer.tiktokLink" target="_blank"><img src="/images/tiktok_icon.png" class="social-icon" alt=""></a>
                    </div>
                </div>
                <div class="bio-box d-flex align-items-center text-start">
                    {{writer.bio}}
                </div>
            </div>
        </div>
    </div>
</div>

<%- exposeLocalsToBrowser({keys: ['writers']}) %>

<script>
    const App = new Vue({
        el: '#app',
        data: {
            writers: window.SAILS_LOCALS.writers,
        },
        methods: {
        },
        
    })
</script>

