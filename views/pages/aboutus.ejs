<div id="app" v-cloak style="padding: 24px">
    <div v-for="writer in writers" class="bio-container">
        <div class="namebox">
            {{writer.nickName}}
        </div>
        <div class="pic-media-link-combo">
            <div class="profile-image">
                <img class="center-cropped" :src="!writer.profileImageUrl ? '/images/startup.png' : writer.profileImageUrl">
            </div>
            <div class="social-links">
                <a v-if="writer.twitterLink != 'undefined'" :href="'https://twitter.com/' +writer.twitterLink"
                    class="twitter-icon"><img src="/images/twitter_icon.png" class="social-icon" alt="" target="_blank"></a>
                <a v-if="writer.instagramLink != 'undefined'" :href="'https://instagram.com/' +writer.instagramLink"><img src="/images/ig_icon.png" class="social-icon" alt="" target="_blank"></a>
                <a v-if="writer.snapchatLink != 'undefined'" :href="'https://snapchat.com/add/' +writer.snapchatLink"><img src="/images/snapchat_icon.png" class="social-icon" alt="" target="_blank"></a>
                <a v-if="writer.tiktokLink != 'undefined'" :href="'https://tiktok.com/@' +writer.tiktokLink"><img src="/images/tiktok_icon.png" class="social-icon" alt="" target="_blank"></a>
            </div>
        </div>

        <div class="bio-box">
            {{writer.bio}}
        </div>
    </div>
</div>

<%- exposeLocalsToBrowser({keys: ['writers']}) %>

<script>
    const App = new Vue({
        el: '#app',
        data: {
            writers: window.SAILS_LOCALS.writers,
